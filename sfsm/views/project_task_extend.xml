<odoo>
    <data>
        <record model="ir.ui.view" id="view_task_form_inherited_dish_home">
            <field name="name">project.task.form.inherited.dish.home</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">

                <field name="user_ids" position="after">
                    <field name="stage_name" invisible="1"/>
                    <field name="is_fsm_isp" invisible="1"/>
                    <field name="project_name" invisible="1"/>
                    <field name="pod" attrs="{'invisible':[('is_fsm_isp','=',False)]}"/>
                    <field name="pon" attrs="{'invisible':['|',('is_fsm_isp','=',False),('project_name','=','New Installation')]}"/>
                    <field name="scheduled_date_start" attrs="{'invisible':[('is_fsm_isp','=',False)]}" widget="datetime" readonly="1"/>
                    <field name="scheduled_date_end" attrs="{'invisible':['|',('is_fsm_isp','=',False),('stage_name','in',['New'])]}" widget="datetime" readonly="1"/>
                    <field name="sla_time" attrs="{'invisible':['|',('is_fsm_isp','=',False),('stage_name','in',['New'])]}"/>
                </field>
                <xpath expr="//button[@name='action_assign_to_me']" position="replace">
                    <button name="%(reschedule_wizard_action)d" type="action" string="Reschedule" class="oe_highlight"
                            attrs="{'invisible': ['|',('is_fsm_isp','=',False), ('stage_name', 'in', ['New', 'Cancelled', 'Rescheduled', 'Completed'])]}"/>
                    <button name="%(cancel_wizard_action)d" type="action" string="Cancel" class="oe_highlight"
                            attrs="{'invisible': ['|',('is_fsm_isp','=',False), ('stage_name', 'in',['Completed', 'Cancelled'])]}"/>

                </xpath>
                <xpath expr="//button[@name='action_fsm_validate']" position="replace">
                    <button name="%(complete_wizard_action)d" type="action" string="Complete" class="oe_highlight" attrs="{'invisible': [('stage_name', 'in', ['Completed','New','Cancelled'])]}"/>
                </xpath>
                <page name="extra_info" position="after">
                    <page name="stage_data" string="Stage Descriptions" attrs="{'invisible':[('is_fsm_isp','=',False)]}">
                        <label for="reschedule_note" string="Reschedule Description:"/>
                        <field name="reschedule_note"
                               attrs="{'readonly':[('stage_name','!=','Rescheduled')]}"/>
                        <label for="cancellation_note" string="Cancellation Description:"/>
                        <field name="cancellation_note"
                               attrs="{'readonly':[('stage_name','!=','Cancelled')]}"/>
                        <label for="completion_note" string="Complete stage Description:"/>
                        <field name="completion_note"
                               attrs="{'readonly':[('stage_name','!=','Completed')]}"/>
                        <field name="customer_signature" widget="signature"/>
                    </page>

                </page>
            </field>
        </record>

    </data>
</odoo>